<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme.V15" parent="Theme.AppCompat.Light.NoActionBar">
        /* WINDOW */
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>

        /* BASIC COLORS */
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:colorForeground">@color/black_light</item>

        <item name="android:textColor">?attr/csCompatTextPrimary</item>
        <item name="android:editTextColor">?attr/csCompatTextPrimary</item>
        <item name="android:textColorPrimaryDisableOnly">?attr/csCompatTextPrimary</item>

        <item name="android:disabledAlpha">0.5</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/black_light</item>
        <item name="android:textColorSecondaryInverse">@color/white_light</item>
        <item name="android:textColorTertiary">@color/grey_dark</item>
        <item name="android:textColorTertiaryInverse">@color/grey_light</item>

        <item name="textColorError">@color/red_dark</item>
        <item name="android:textColorHint">?attr/csCompatTextTertiary</item>
        <!--<item name="android:textColorHighlight">?attr/colorPrimary a bit transparent</item>-->
        <item name="android:textColorLink">?attr/csCompatAccent</item>

        <item name="android:listDivider">@color/grey</item>

        <item name="colorPrimaryLight">@color/blue_light</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/orange_light</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">?attr/colorAccent</item>

        /* better not to override */
        <!--<item name="colorControlActivated">?attr/csCompatAccent</item>-->
        <!--<item name="colorButtonNormal">?attr/csCompatAccent</item>-->

        /* STYLES INCEPTION */
        <item name="actionBarStyle">?attr/appToolbarStyle</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">?attr/appToolbarStyle</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:borderlessButtonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.ListStyle</item>

        /* LIBRARY ATTRS */
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>

        /* COMPATIBILITY */
        <item name="dsCompatListBackground">@drawable/list_item_background</item>
        <item name="csCompatAccent">?attr/colorAccent</item>
        <item name="csCompatColoredTextPrimary">?colorAccent</item>
        <item name="csCompatColoredTextSecondary">?colorAccent</item>
        <item name="csCompatColoredTextTertiary">?colorAccent</item>
        <item name="csCompatPrimary">?colorPrimary</item>
        <item name="csCompatPrimaryDark">?colorPrimaryDark</item>
        <item name="csCompatPrimaryLight">?colorPrimaryLight</item>
        <item name="csCompatTextError">?textColorError</item>
        <item name="csCompatTextPrimary">?android:attr/textColorPrimary</item>
        <item name="csCompatTextPrimaryInverse">?android:attr/textColorPrimaryInverse</item>
        <item name="csCompatTextSecondary">?android:attr/textColorSecondary</item>
        <item name="csCompatTextTertiary">?android:attr/textColorTertiary</item>
    </style>

    <style name="Base.AppTheme" parent="Base.AppTheme.V15">
        <item name="colorControlActivated">?attr/csCompatAccent</item>
        <item name="colorButtonNormal">?attr/csCompatAccent</item>
    </style>

    <style name="Base.AppThemeOverlay.Dialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimaryInverse">@color/white_light</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:colorForeground">@color/black_light</item>
    </style>

    <style name="Base.AppThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
        <item name="android:actionMenuTextColor">?android:attr/textColorPrimary</item>
        <item name="android:icon">?android:attr/textColorPrimary</item>
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="colorControlActivated">?android:attr/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="android:textColorPrimaryInverse">@color/white_light</item>
    </style>

    <style name="Base.AppThemeOverlay.Toolbar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="Base.AppThemeOverlay.Toolbar.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="colorControlNormal">?attr/color</item>
        <item name="colorControlActivated">?attr/color</item>
        <item name="color">@color/white</item>
    </style>

</resources>
