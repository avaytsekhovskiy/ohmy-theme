<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        /* WINDOW */
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>

        /* BASIC COLORS */
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:colorForeground">@color/black_light</item>

        <item name="android:textColor">@color/cs_text_primary</item>
        <item name="android:editTextColor">@color/cs_text_primary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/cs_text_primary</item>

        <item name="android:disabledAlpha">0.5</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/green_dark</item>
        <item name="android:textColorSecondaryInverse">@color/green_dark</item>
        <item name="android:textColorTertiary">@color/grey_dark</item>
        <item name="android:textColorTertiaryInverse">@color/grey_light</item>

        <item name="textColorError">@color/red_dark</item>
        <item name="android:textColorHint">@color/cs_text_tertiary</item>
        <!--<item name="android:textColorHighlight">?attr/colorPrimary a bit transparent</item>-->
        <item name="android:textColorLink">@color/cs_accent</item>

        <item name="android:listDivider">@color/grey</item>

        <item name="colorPrimaryLight">@color/blue_light</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/orange_light</item>
        <!--<item name="colorControlActivated">?attr/colorAccent</item>-->
        <!--<item name="colorButtonNormal">?attr/colorAccent</item>-->

        /* STYLES INCEPTION */
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Light</item>

        <item name="appToolbarStyle">@style/AppTheme.Toolbar.Dark</item>
        <item name="actionBarStyle">?attr/appToolbarStyle</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">?attr/appToolbarStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrow</item>

        <item name="android:buttonStyle">@style/AppTheme.Button.Colored</item>
        <item name="android:borderlessButtonStyle">@style/AppTheme.Button.Borderless.Colored</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.ListStyle</item>

        /* LIBRARY ATTRS */
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoAnimationTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    /* ALERT DIALOGS */

    <style name="AppTheme.Dialog.Alert" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimaryInverse">@color/white_light</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="android:colorBackground">@color/white_light</item>
        <item name="android:colorForeground">@color/black_light</item>
    </style>

    <style name="AppTheme.Dialog.Alert.Light" />

    /* TOOLBAR */
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorSecondary">?android:attr/textColorPrimary</item>
        <item name="android:actionMenuTextColor">?android:attr/textColorPrimary</item>
        <item name="android:icon">?android:attr/textColorPrimary</item>
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="colorControlActivated">?android:attr/textColorPrimary</item>
        <item name="popupTheme">@style/AppTheme.Toolbar.Popup.Dark</item>
        <item name="android:textColorPrimary">@color/black_light</item>
        <item name="android:textColorPrimaryInverse">@color/white_light</item>
    </style>

    <style name="AppTheme.Toolbar.Light" />

    /* TOOLBAR POPUP */
    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Popup.Light" />

    /* DRAWER ICON */
    <style name="AppTheme.Toolbar.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="colorControlNormal">?attr/color</item>
        <item name="colorControlActivated">?attr/color</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar.DrawerArrow.Light" />

</resources>