<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="android:windowBackground">@color/background_common</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:colorBackground">@color/background_common</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="actionBarStyle">@style/AppTheme.Toolbar</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrow</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/primary</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.Toolbar.Overflow</item>

        <item name="textColorError">@color/primary_dark</item>

        <!--Libs-->
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>

        <!--Own-->
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimaryInverse">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_primary_inverse</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog" tools:ignore="UnusedResources">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text_primary_inverse</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary_inverse</item>
        <!--<item name="android:textCursorDrawable">@drawable/cursor</item>-->
        <item name="android:actionMenuTextColor">@color/text_primary_inverse</item>
        <item name="android:icon">@color/text_primary_inverse</item>
        <item name="colorControlNormal">@color/text_primary_inverse</item>
        <item name="colorControlActivated">@color/text_primary_inverse</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:colorBackground">@color/text_primary_inverse</item>
    </style>

    <style name="AppTheme.Toolbar.Overflow">
        <item name="android:listSelector">@drawable/list_item_background</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="AppTheme.Toolbar.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_primary_inverse</item>
        <item name="colorControlNormal">@color/text_primary_inverse</item>
        <item name="colorControlActivated">@color/text_primary_inverse</item>
    </style>

</resources>