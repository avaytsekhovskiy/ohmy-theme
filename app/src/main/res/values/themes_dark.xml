<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Dark">
        /* WINDOW */
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        /* BASIC COLORS */
        <item name="android:colorBackground">@color/black_light</item>
        <item name="android:colorForeground">@color/white_light</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>

        <item name="colorPrimaryLight">@color/orange_light</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/blue_light</item>

        /* STYLES INCEPTION */
        <item name="appToolbarStyle">@style/AppTheme.Toolbar.Light</item>
        <item name="drawerArrowStyle">@style/AppTheme.Toolbar.DrawerArrow.Dark</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Dark</item>
    </style>

    <style name="AppTheme.Dialog.Alert.Dark">
        <item name="android:textColorPrimaryInverse">@color/black_light</item>
        <item name="android:textColorPrimary">@color/white_light</item>
        <item name="android:colorBackground">@color/black_light</item>
        <item name="android:colorForeground">@color/white_light</item>
    </style>

    <style name="AppTheme.Toolbar.Dark">
        <item name="popupTheme">@style/AppTheme.Toolbar.Popup.Light</item>
        <item name="android:textColorPrimary">@color/white_light</item>
        <item name="android:textColorPrimaryInverse">@color/black_light</item>
    </style>

    <style name="AppTheme.Toolbar.Popup.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <style name="AppTheme.Toolbar.DrawerArrow.Dark">
        <item name="color">@color/black</item>
    </style>

</resources>